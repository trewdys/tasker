<h1>Edit task</h1>

<%= form_with(model: @task) do |form| %>

    <p>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.date_field :start_date %>
    </p>

    <p>
        <%= form.time_field :start_time %>
    </p>

    <p>
        <%= form.date_field :end_date %>
    </p>

    <p>
        <%= form.time_field :end_time %>
    </p>

    <p>
        <%= form.text_area :description %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', root_path %>
